{
  "name": "wekruit-valet",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "vitest run",
    "db:generate": "turbo db:generate --filter=@valet/db",
    "db:migrate": "turbo db:migrate --filter=@valet/db",
    "db:seed": "turbo db:seed --filter=@valet/db",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "precommit": "lint-staged && pnpm typecheck",
    "prepush": "bash ./scripts/validate-ci-setup.sh",
    "validate": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "esbuild"
    ],
    "overrides": {
      "esbuild": ">=0.25.0",
      "zod": "3.24.1"
    }
  },
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
